{
    "compilerOptions": {
        "target": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "moduleResolution": "NodeNext",
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./",
        "module": "NodeNext",
        "paths": {
            "interfaces/*": ["src/interfaces/*"],
            "types/*": ["src/types/*"],
            "utils/*": ["src/utils/*"]
        }
    }
}
